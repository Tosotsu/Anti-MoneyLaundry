{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci --ignore-scripts --force",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["all"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 